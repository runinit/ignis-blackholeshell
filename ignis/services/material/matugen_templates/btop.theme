# Memory box
theme[mem_box]="{{colors.surface_container.default.hex}}"
theme[mem_box_border]="{{colors.outline_variant.default.hex}}"

# Network box
theme[net_box]="{{colors.surface_container.default.hex}}"
theme[net_box_border]="{{colors.outline_variant.default.hex}}"

# Graph colors
theme[graph_text]="{{colors.on_surface.default.hex}}"
theme[meter_bg]="{{colors.surface_variant.default.hex}}"

# CPU graph colors
theme[cpu_start]="{{colors.primary.default.hex}}"
theme[cpu_mid]="{{colors.secondary.default.hex}}"
theme[cpu_end]="{{colors.tertiary.default.hex}}"

# Memory graph colors
theme[mem_start]="{{colors.secondary.default.hex}}"
