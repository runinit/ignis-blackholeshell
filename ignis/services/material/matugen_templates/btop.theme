# Btop Theme for Blackhole Shell
# Generated by matugen 3.0

# Main background and foreground
theme[main_bg]="{{colors.background.default.hex}}"
theme[main_fg]="{{colors.on_background.default.hex}}"

# Title
theme[title]="{{colors.on_surface.default.hex}}"

# Highlighted and selected items
theme[hi_fg]="{{colors.primary.default.hex}}"
theme[selected_bg]="{{colors.primary_container.default.hex}}"
theme[selected_fg]="{{colors.on_primary_container.default.hex}}"

# Inactive and disabled
theme[inactive_fg]="{{colors.on_surface_variant.default.hex}}"

# Process box
theme[proc_misc]="{{colors.on_surface_variant.default.hex}}"
theme[proc_box]="{{colors.surface_container.default.hex}}"

# CPU box
theme[cpu_box]="{{colors.surface_container.default.hex}}"
